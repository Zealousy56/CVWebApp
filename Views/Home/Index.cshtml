@model List<Picture>

@if(Model != null && Model.Count > 0)
{
    foreach(var picture in Model)
    {
        <img src="@picture.PictureUrl.Replace("wwwroot\\","")" class="card-img-top" style="width:200px;height:auto;" />


               /* <img src="data:@image.ContentType;base64,@Convert.ToBase64String(image.ImageData)" alt="@image.ImageName" />*/

    }
}

<div asp-validation-summary="All"></div>

<h3>Add a Picture</h3>
<form asp-action="Index" enctype="multipart/form-data">
   <input type="file" name="file"/>
   <button class="btn-primary">Add</button>
</form>